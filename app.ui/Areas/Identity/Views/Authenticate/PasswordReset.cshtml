<div class="wrapper-generic-card">
    <div class="container--card">
        <h3>Forgot Your Password?</h3>
        <p>Enter your password and we'll send a link to reset your password</p>
        <form asp-area="Identity" asp-controller="Authenticate" asp-action="PasswordReset" class="form-reset">
            <input type="email" name="email" placeholder="Email Address" class="reset-email"/>
            <input type="submit" class="btn-primary--rectangle" />
        </form>
    </div>
</div>
